@page "/Forbidden"
@layout LoginLayout

<div class="background">
    <div class="login-container small">
        <div class="login-box text-center md">
            <div class="error-container text-center">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="mt-3">403 Forbidden</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-danger mt-3" role="alert">
                            <strong>Error:</strong> You do not have permission to access this page.
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9 text-start">
                        <p class="">Please login to the correct account to view this page</p>
                    </div>
                    <div class="col-md-3 text-end">
                        <a href="/" class="btn btn-primary mt-2">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>