
<nav class="navbar navbar-expand-md navbar-light bg-white mt-1" style="margin-right: 15px;">
    <div class="container-fluid">
        <a class="navbar-brand">
            <NavLink class="navbar-brand" href="HomePage">
                <img src="FDTC-LOGO2.png" alt="" height="40" width="auto">
            </NavLink>
        </a>
        <button class="navbar-toggler @NavButtonCssClass" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-label="Toggle navigation"
            @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse @NavBarCssClass" id="navbarCollapse" @onclick="ToggleNavMenu">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                @if(UserAppContext.CurrentAccountID == 2){
                <li class="nav-item">
                    <NavLink class="nav-link" style="margin-right: 15px;" href="Sign-In">
                        <span class="oi oi-pencil px-2" aria-hidden="true"></span> Sign-In
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="View">
                        <span class="oi oi-list px-2" aria-hidden="true"></span> View
                    </NavLink>
                </li>
                }
                @if(UserAppContext.CurrentAccountID == 1 ){
                <li class="nav-item">
                    <NavLink class="nav-link" href="Employee">
                        <span class="oi oi-people px-2" aria-hidden="true"></span> Employee
                    </NavLink>
                </li>
                 <li class="nav-item">
                    <NavLink class="nav-link" href="Reports">
                        <span class="oi oi-file px-2" aria-hidden="true"></span> Reports
                    </NavLink>
                </li>
                }
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/">
                        <span class="oi oi-person" aria-hidden="true"></span>
                    </NavLink>
                </li>
            </ul>
        </div>

    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private string? NavBarCssClass => collapseNavMenu ? null : "show";
    private string? NavButtonCssClass => collapseNavMenu ? "collapsed" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}