@inherits ComponentBase

<div class="card my-3 mx-3">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center w-100">
            <div class="row w-100">
                <div class="col-5 d-flex align-items-center pt-2">
                    <h5 class="card-title align-self-center">@Employee.FirstName @Employee.LastName</h5>
                </div>
                <div class="col-7 d-flex align-items-center px-4">
                    <h5 class="card-text">Employee ID: @Employee.EmployeeID</h5>
                </div>
            </div>
        </div>
        <button class="btn btn-danger" @onclick="HandleDeleteEmployee">Delete</button>
    </div>
</div>

@code {
    [Parameter]
    public HubEmployee Employee { get; set; }

    [Parameter]
    public EventCallback<HubEmployee> OnDeleteEmployee { get; set; }

    private async Task HandleDeleteEmployee()
    {
        await OnDeleteEmployee.InvokeAsync(Employee);
    }
}
