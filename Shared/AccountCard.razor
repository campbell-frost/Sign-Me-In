@inherits ComponentBase

<div class="card my-4">
    <div class="card-body d-flex justify-content-between align-items-center rounded">
        <div class="d-flex align-items-center w-100">
            <div class="row w-100">
                <div class="col-5 d-flex align-items-center pt-2">
                    <h5 class="card-title align-self-center">@Account.UserName</h5>
                </div>
                <div class="col-7 d-flex align-items-center px-4">
                    <h5 class="card-text">Account ID: @Account.AccountID</h5>
                </div>
            </div>
        </div>
        <button class="btn btn-primary"@onclick="HandleAccountSelect">Select</button>
    </div>
</div>

@code {
    [Parameter]
    public Account Account { get; set; }

    [Parameter]
    public EventCallback<Account> OnSelectAccount { get; set; }

    private async Task HandleAccountSelect()
    {
        // Invoke the parent component's SelectAccount method and pass the Account
        await OnSelectAccount.InvokeAsync(Account);
    }
}


