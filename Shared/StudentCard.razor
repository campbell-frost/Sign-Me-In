@inherits ComponentBase

<div class="card mb-3">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center w-100">
            <div class="row w-100">
                <div class="col-5 d-flex align-items-center pt-2" >
                    <h5 class="card-title align-self-center">@Student.FirstName @Student.LastName</h5>
                </div>
                <div class="col-7 d-flex align-items-center px-4">
                    <h5 class="card-text">ID: @Student.StudentID</h5>
                </div>
            </div>
        </div>
        <button class="btn btn-primary" @onclick="HandleSelectStudent">Select</button>
    </div>
</div>


@code {
    [Parameter]
    public Student Student { get; set; }

    [Parameter]
    public EventCallback<Student> OnSelectStudent { get; set; }

    private async Task HandleSelectStudent()
    {
        // Invoke the parent component's SelectStudent method and pass the student
        await OnSelectStudent.InvokeAsync(Student);
    }
}
