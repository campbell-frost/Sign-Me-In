<div class="navbar navbar-light bg-white border-danger">
    <div class="flex-fill border-1">
        <div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
            <nav class="d-flex flex-column align-items-start">
                <div class="navbar-nav px-3 py-2">
                    <NavLink class="nav-link" href="Dashboard/Employee">
                        <span class="oi oi-plus" aria-hidden="true"></span>Employee
                    </NavLink>
                </div>
                <div class="navbar-nav px-3 py-2">
                    <NavLink class="nav-link" href="Dashboard/Reports" Match="NavLinkMatch.All">
                        <span class="oi oi-file" aria-hidden="true"></span>Reports
                    </NavLink>
                </div>
                <div class="navbar-nav px-3 py-2">
                    <NavLink class="nav-link" href="Dashboard/Account" Match="NavLinkMatch.All">
                        <span class="oi oi-person" aria-hidden="true"></span>Account
                    </NavLink>
                </div>
            </nav>
        </div>
    </div>
</div>


@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
